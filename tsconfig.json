{
    "compilerOptions": {
      "target": "ES6",
      "module": "commonjs",
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "outDir": "./dist",
      "rootDir": "./"
    },
    "include": ["backend/src/**/*.ts", "backend/tests/**/*.ts", "frontend/src/**/*.ts", "frontend/tests/**/*.ts"],
    "exclude": ["node_modules"]
  }
  